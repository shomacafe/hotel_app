<div class="box">
  <h2>アカウント編集(registrations)</h2>
  <%= form_with model:@user, url: registration_path(resource_name), local: true do |f| %>
      <table>
        <%= render "devise/shared/error_messages", resource: resource %>
      <tr>
        <td><%= f.label :メールアドレス %></td>
      </tr>
      <tr>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email", maxlength: "50", size: "50" %></td>
      </tr>
      <tr>
        <td><%= f.label :変更後パスワード（変更する場合のみ入力） %></td>
      </tr>
      <tr>
        <td><%= f.password_field :password, autofocus: true, autocomplete: "new-password", maxlength: "50", size: "50" %></td>
      </tr> 
      <tr>
        <td><%= f.label :パスワード確認用（変更する場合のみ入力）%></td>
      </tr>
      <tr>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password", maxlength: "50", size: "50" %></td>
      </tr>
      <tr>
        <td><%= f.label :現在のパスワード）%></td>
      </tr>
      <tr>
        <td><%= f.password_field :current_password, autocomplete: "current-password", maxlength: "50", size: "50" %></td>
      </tr>
      <tr>
        <td><%= f.submit "更新", class: 'btn ' %></td>
      </tr>
      <tr>
        <td><%= link_to '戻る', account_users_path, class: "btn" %></td>
      </tr>
     </table>
     <% end %>
 
  </div>
</div>
