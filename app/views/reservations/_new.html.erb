

<div class="reservation-form">
  <%= form_with model: @reservation, url: confirm_reservations_path, method: :post, local: true do |f| %>
    <table>
      <tr>
        <td><strong>¥<%= @room.price %>/日</strong></td>
      </tr>
      <tr>
        <td>
          <%= f.label :start_date ,"開始日" %>
          <p><%= f.date_field :start_date, class:"search_box" %></p>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label :end_date ,"終了日" %>
          <p><%= f.date_field :end_date, class:"search_box"  %></p>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label :number_of_people ,"人数" %>
          <p><%= f.number_field :number_of_people, class:"search_box"  %></p>
        </td>
      </tr>
      

      <%= f.hidden_field :user_id, :value => current_user.id %>
      <%= f.hidden_field :room_id, :value => @room.id %>
      <%= f.hidden_field :price, :value => @room.price %>

      <tr>
        <td>
          <%= f.submit "予約する", class:"form-submit" %>
        </td>
      </tr>
    </table>
  <% end %>
</div>


